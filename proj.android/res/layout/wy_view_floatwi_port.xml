<LinearLayout 	
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
    <!-- top container -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="98dp"
        android:orientation="vertical"
        android:background="@drawable/wy_wiboard_bg_port">
        
	    <!-- announcement container -->
	    <FrameLayout
	        android:layout_width="fill_parent"
	        android:layout_height="57dp">
	
	        <!-- progress bar -->
	        <ProgressBar
	            android:id="@+id/wy_pb"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:indeterminate="true"
	            android:layout_gravity="center"
	            android:visibility="invisible"/>
	        
		    <!-- announcement gallery -->
	        <Gallery
		        android:id="@+id/wy_g_anno"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:spacing="10dp"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:visibility="invisible"/>
		    
	    </FrameLayout>
	    
	    <!-- button container bg -->
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:paddingTop="7dp"
	        android:paddingBottom="3dp">
	        
	        <!-- challenge button -->
	        <FrameLayout 
	            android:id="@+id/wy_btn_challenge"
	            android:clickable="true"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_marginLeft="6dp"
	            android:layout_marginRight="6dp"
	            android:background="@drawable/wy_wiboard_btn">
	            
	            <!-- button icon and text -->
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:src="@drawable/wy_wiboard_btn_challenge_port"/>
	            
	            <!-- badge text -->
	            <TextView
	                android:id="@+id/wy_challenge_badge"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right|top"
	                android:background="@drawable/wy_float_badge"
	                android:gravity="center"
	                android:textSize="10sp"
	                android:includeFontPadding="false"
	                android:textColor="#ffffffff"
	                android:visibility="invisible"
	                android:singleLine="false"/>
	            
	        </FrameLayout>
	
	        <!-- message button -->
	        <FrameLayout 
	            android:id="@+id/wy_btn_message"
	            android:clickable="true"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_marginLeft="6dp"
	            android:layout_marginRight="6dp"
	            android:background="@drawable/wy_wiboard_btn">
	
	            <!-- button icon and text -->
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:src="@drawable/wy_wiboard_btn_message_port"/>
	
	            <!-- badge text -->
	            <TextView
	                android:id="@+id/wy_message_badge"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right|top"
	                android:background="@drawable/wy_float_badge"
	                android:gravity="center"
	                android:textSize="10sp"
	                android:includeFontPadding="false"
	                android:textColor="#ffffffff"
	                android:visibility="invisible"
	                android:singleLine="false"/>
	            
	        </FrameLayout>
	
	        <!-- friend button -->
	        <FrameLayout 
	            android:id="@+id/wy_btn_friend"
	            android:clickable="true"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_marginLeft="6dp"
	            android:layout_marginRight="6dp"
	            android:background="@drawable/wy_wiboard_btn">
	
	            <!-- button icon and text -->
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:src="@drawable/wy_wiboard_btn_firend_port"/>
	
	            <!-- badge text -->
	            <TextView
	                android:id="@+id/wy_friend_badge"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right|top"
	                android:background="@drawable/wy_float_badge"
	                android:gravity="center"
	                android:textSize="10sp"
	                android:includeFontPadding="false"
	                android:textColor="#ffffffff"
	                android:visibility="invisible"
	                android:singleLine="false"/>
	            
	        </FrameLayout>
	        
	    </LinearLayout>
	    
	</LinearLayout>
	
    <!-- pullup button -->
    <Button
        android:id="@+id/wy_btn_pullup"
        android:layout_width="77dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-3dp"
        android:background="@drawable/wy_wiboard_pullup_btn_port"/>

</LinearLayout>
