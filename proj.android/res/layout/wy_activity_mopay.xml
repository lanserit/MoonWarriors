<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	<!-- download panel -->
	<LinearLayout
		android:id="@+id/wy_ll_download_panel" 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:padding="30dp"
	    android:gravity="center"
	    android:background="@drawable/wy_dialog_progress_bg">
	    
	    <ProgressBar
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:indeterminate="true"/>
	    	
	    <TextView 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        style="@android:style/TextAppearance.Medium"
	        android:singleLine="false"
	        android:text="@string/wy_progress_first_time_use_mopay"/>
	        
	    <Button
	    	android:id="@+id/wy_btn_cancel"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="15dip"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:text="@string/wy_button_cancel"/>
	        
	</LinearLayout>
	
	<!-- continue panel -->
	<LinearLayout
		android:id="@+id/wy_ll_continue_panel" 
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:padding="30dp"
	    android:gravity="center"
	    android:background="@drawable/wy_dialog_progress_bg">
	    
	    <TextView 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        style="@android:style/TextAppearance.Medium"
	        android:singleLine="false"
	        android:text="@string/wy_label_please_install_mopay"/>
	        
	    <Button
	    	android:id="@+id/wy_btn_continue"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="15dip"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	    	android:text="@string/wy_button_continue"/>
	    	
	</LinearLayout>

</FrameLayout>